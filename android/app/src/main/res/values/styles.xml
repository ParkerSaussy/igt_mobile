<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>

    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/splash_color
        </item> <!--Background color-->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/lesgo_bg_image
        </item>
        <!--<item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/splash_logo_a
        </item> --><!--Your Icon-->
